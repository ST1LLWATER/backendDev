<center>
  <h1>Register</h1>

  <div class="container">
    <form action="/user/login" method="post">
      <div class="row">
        <div class="col-25">
          <label>First Name:</label>
        </div>
        <div class="col-75">
          <input
            type="text"
            required
            name="firstName"
            placeholder="Name"
            required
          />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label>Last Name:</label>
        </div>
        <div class="col-75">
          <input
            type="text"
            required
            name="lastName"
            placeholder="Name"
            required
          />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label>Password:</label>
        </div>
        <div class="col-75">
          <input
            type="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label>Email:</label>
        </div>
        <div class="col-75">
          <input
            type="email"
            name="email"
            placeholder="email@gmail.com"
            required
          />
        </div>
      </div>
      <br />
      <button type="submit" style="background-color: rgb(138, 228, 138)">
        Register
      </button>

      <button type="reset" style="background-color: rgb(230, 106, 106)">
        Reset
      </button>
    </form>
  </div>
  <a href="/user/login"> Already Registered? Login in here</a>
</center>
